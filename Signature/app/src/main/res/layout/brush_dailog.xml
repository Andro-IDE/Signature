<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:id="@+id/brush_dailog">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:gravity="center"
		android:id="@+id/tv_dailog"
		android:layout_weight="1.0"/>

	<SeekBar
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:progress="25"
		android:padding="20dp"
		android:id="@+id/sb_dailog"
		android:layout_weight="1"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1.0"
		android:id="@+id/ll_stroke">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1.0">

			<RadioGroup
				android:layout_gravity="center"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="5dp"
				android:id="@+id/rg_style">

				<TextView
					android:gravity="center"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Style ðŸ‘‡"/>

				<RadioButton
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1.0"
					android:text="FILL"
					android:gravity="center"
					android:id="@+id/fill"/>

				<RadioButton
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1.0"
					android:text="STROKE"
					android:gravity="center"
                    android:checked="true"
					android:id="@+id/stroke"/>

				<RadioButton
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1.0"
					android:text="FILL &amp; STROKE"
					android:gravity="center"
					android:id="@+id/fill_and_stroke"/>

			</RadioGroup>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1.0">

			<RadioGroup
				android:layout_gravity="center"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="5dp"
				android:id="@+id/rg_join">

				<TextView
					android:gravity="center"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Join ðŸ‘‡"/>

				<RadioButton
					android:text="BEVEL"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1.0"
					android:gravity="center"
					android:id="@+id/bevel"/>

				<RadioButton
					android:text="MITER"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1.0"
					android:gravity="center"
					android:id="@+id/miter"/>

				<RadioButton
					android:text="ROUND"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1.0"
					android:gravity="center"
                    android:checked="true"
					android:id="@+id/round"/>

			</RadioGroup>

		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="1.0">

			<RadioGroup
				android:layout_gravity="center"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="5dp"
				android:id="@+id/rg_cap">

				<TextView
					android:gravity="center"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Cap ðŸ‘‡"/>

				<RadioButton
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1.0"
					android:text="BUTT"
					android:gravity="center"
					android:id="@+id/butt"/>

				<RadioButton
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1.0"
					android:text="ROUND"
					android:gravity="center"
                    android:checked="true"
					android:id="@+id/roundCap"/>

				<RadioButton
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1.0"
					android:text="SQUARE"
					android:gravity="center"
					android:id="@+id/square"/>

			</RadioGroup>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll_color"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_weight="1">

		<Button
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:onClick="onColorPick"
			android:text="Choose Color"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_weight="1"
		android:id="@+id/ll_Buttons">

		<Button
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="No"
			android:id="@+id/no"
			android:layout_weight="1.0"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:text="Yes"
			android:id="@+id/yes"
			android:layout_weight="1.0"/>

	</LinearLayout>

</LinearLayout>

